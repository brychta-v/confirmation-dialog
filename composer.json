{
	"name"			: "ipub/confirmation-dialog",
	"type"			: "library",
	"description"	: "Nette extension for creating confirm action dialogs for various items on iPublikuj framework",
	"keywords"		: ["confirm action", "nette dialog", "confirm dialog", "nette", "ipub", "framework", "tools"],
	"homepage"		: "https://github.com/iPublikuj/confirmation-dialog.git",
	"license"		: ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "Adam Kadlec",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support":{
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/confirmation-dialog/issues"
	},

	"require": {
		"php"				: ">=5.4.0",
		"nette/application"	: "~2.2",
		"nette/di"			: "~2.2",
		"nette/forms"		: "~2.2",
		"nette/http"		: "~2.2",
		"nette/utils"		: "~2.2",
		"latte/latte"		: "~2.2"
	},

	"require-dev": {
		"nette/bootstrap"	: "~2.2",
		"nette/mail"		: "~2.2",
		"nette/safe-stream"	: "~2.2",
		"nette/tester"		: "@dev",
		"tracy/tracy"		: "@dev",
		"janmarek/mockista"	: "@dev"
	},

	"suggest": {
		"kdyby/translation"	: "If you wanna use translations in template and messages."
	},

	"autoload": {
		"psr-0": {
			"IPub\\ConfirmationDialog\\": "src/"
		}
	}
}
